pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post{
        always{
            echo "This runs always"
        }
        success{
            echo "This runs when pipeline is success"
        }
        failure{
            echo " This runs when pipeline fails"
        }
    }
}